{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "padding": {
            "top": 3
        }
    },
    "general": {
        "multithreading": true
    },
    "display": {
        "separator": " • "
    },
    "modules": [
        "break",
        {
            "type": "custom",
            "format": "╭────────────────────────── Software Info ──────────────────────────╮"
        },
        {
            "type": "os",
            "format": "{3} {12}",
            "key": " ╭─ ",
            "color": "purple"
        },
        {
            "type": "kernel",
            "format": "{1} ({2})",
            "key": " ├─ ",
            "color": "purple"
        },
        {
            "type": "packages",
            "format": "{} (pacman)",
            "key": " ├─󰮯 ",
            "color": "purple"
        },
        {
            "type": "uptime",
            "key": " ├─ ",
            "color": "purple"
        },
        {
            "type": "wm",
            "key": " ├─ ",
            "color": "purple"
        },
        {
            "type": "shell",
            "format": "{3} ({4})",
            "key": " ├─󰞷 ",
            "color": "purple"
        },
        {
            "type": "terminal",
            "format": "{5} ({6})",
            "key": " ╰─ ",
            "color": "purple"
        },
        {
            "type": "custom",
            "format": "├────────────────────────── Hardware Info ──────────────────────────┤"
        },
        {
            "type": "host",
            "format": "{5} {1}{2}",
            "key": " ╭─󰟀 ",
            "color": "purple"
        },
        {
            "type": "cpu",
            "format": "{1}",
            "key": " ├─ ",
            "color": "purple"
        },
        {
            "type": "gpu",
            "format": "{1} {2} ({6})",
            "key": " ├─󱤓 ",
            "color": "purple"
        },
        {
            "type": "disk",
            "format": "{1} / {2} ({3}) - {10} ({9})",
            "key": " ├─ ",
            "color": "purple"
        },
        {
            "type": "memory",
            "key": " ╰─ ",
            "color": "purple"
        },
        {
            "type": "custom",
            "format": "╰───────────────────────────────────────────────────────────────────╯"
        },
        {
            "type": "custom",
            "format": "  {#red}󱓻 {#green}󱓻 {#yellow}󱓻 {#blue}󱓻 {#magenta}󱓻 {#cyan}󱓻 "
        }
    ]
}
